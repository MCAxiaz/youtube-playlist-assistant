{
    "manifest_version": 2,
    "name": "Youtube Playlist Assistant",
    "version": "1.0",
  
    "description": "Makes Youtube playlists suck less.",
  
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["playlist.js"]
        }
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "permissions": [
        "storage"
    ]
}